<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#signin">Sign in</a></li>
        <li class="tab col s6"><a href="#signup">Sign up</a></li>
      </ul>
    </div>
    <div id="signin" class="col s6 offset-s3">
      <h1>Sign in shop</h1>
      <form action="/auth/signin" method="POST">
        <div class="input-field">
          <input id="email" type="email" name="email" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Write email"></span>
        </div>

        <div class="input-field">
          <input id="password" type="password" name="password" class="validate" required min="1">
          <label for="password">Password</label>
          <span class="helper-text" data-error="Write password"></span>
        </div>

        <button class="btn btn-primary" type="submit">Sign in</button>
      </form>
    </div>
    <div id="signup" class="col s6 offset-s3">
      <h1>Sign up shop</h1>
      <form action="/auth/signup" method="POST">
        <div class="input-field">
          <input id="remail" type="email" name="remail" class="validate" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Write email"></span>
        </div>

        <div class="input-field">
          <input id="rpassword" type="password" name="rpassword" class="validate" required min="1">
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Write password"></span>
        </div>

        <div class="input-field">
          <input id="confirm" type="password" name="confirm" class="validate" required min="1">
          <label for="confirm">Password confirm</label>
          <span class="helper-text" data-error="Write password confirm"></span>
        </div>

        <button class="btn btn-primary" type="submit">Sign in</button>
      </form>
    </div>
  </div>
</div>
