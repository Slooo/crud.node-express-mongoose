<h1>Add new course</h1>

{{#if error}}
  <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
  <div class="input-field">
    <input type="text" class="validate" name="title" required value="{{data.title}}">
    <label for="title">Name course</label>
    <span class="helper-text" data-error="Write name"></span>
  </div>

  <div class="input-field">
    <input type="number" class="validate" name="price" required min="1" value="{{data.price}}">
    <label for="price">Price course</label>
    <span class="helper-text" data-error="Write price"></span>
  </div>

  <div class="input-field">
    <input id="img" type="text" class="validate" name="img" required value="{{data.img}}">
    <label for="img">URL image</label>
    <span class="helper-text" data-error="Write URL image"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}"/>

  <button class="btn btn-primary">Add course</button>
</form>
