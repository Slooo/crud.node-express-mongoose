<h1>Cart</h1>

<div id="cart">
  {{#if courses.length}}
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Qty</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      {{#each courses}}
        <tr>
          <td>{{title}}</td>
          <td>{{count}}</td>
          <td>
            <button class="btn btn-small js-remove" data-id="{{id}}">
              Delete
            </button>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>

    <p>
      <strong>
        Total price: <span class="price">{{totalPrice}}</span>
      </strong>
    </p>

    <form action="/orders" method="POST">
      <button type="submit" class="btn">
        Order
      </button>
    </form>

  {{else}}
    <p>Cart empty</p>
  {{/if}}
</div>
